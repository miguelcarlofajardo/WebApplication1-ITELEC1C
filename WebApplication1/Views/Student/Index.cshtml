@model IEnumerable<Student>;

<div>Student List</div>

<a href="@Url.Action("AddStudent")" class="btn btn-primary mb-3" >Add Student</a>

<table class="table table-dark">

    <tr>
        <th colspan="7">Student</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Details</td>
        <td>Edit</td>


    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>


        </tr>
    }
</table>