@{
}

@model Instructor
<h1>Edit instructor</h1>

<form action="EditInstructor" method="post">
    <div class="mb-3">
        <label asp-for="Id" class="form-label"> ID </label>
        <input asp-for="Id" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"> Last Name </label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"> First Name </label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="IsTenured" class="form-label"> IsTenured </label>
        <select asp-for="IsTenured" class="form-control">
            <option value="true">Permanent</option>
            <option value="false">Probationary</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="HiringDate" class="form-label"> Hiring Date </label>
        <input asp-for="HiringDate" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Rank" class="form-label"> Rank </label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>